{
    "version": 1,
    "disable_existing_loggers": false,
    "handlers": {
        "console": {
            "level": "DEBUG",
            "class": "logging.StreamHandler",
            "formatter": "verbose"
        },
        "file": {
            "level": "INFO",
            "class": "logging.FileHandler",
            "filename": "app.log",
            "formatter": "verbose"
        }
    },
    "formatters": {
        "verbose": {
            "format": "{asctime} {name} {levelname} {message}",
            "style": "{"
        }
    },

    "loggers": {
        "console": {
            "handlers": ["console"],
            "level": "DEBUG",
            "propagate": true
        },
        "file": {
            "handlers": ["file"],
            "level": "INFO",
            "propagate": true
        }
    }
}